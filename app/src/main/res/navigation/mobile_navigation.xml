<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_recommend">

    <fragment
        android:id="@+id/navigation_recommend"
        android:name="com.example.elvamao.ui.recommend.RecommendFragment"
        android:label="@string/title_Recommend"
        tools:layout="@layout/fragment_recommend" >
        <action
            android:id="@+id/to_detail"
            app:destination="@id/navigation_recipe_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_collect"
        android:name="com.example.elvamao.ui.collect.CollectFragment"
        android:label="@string/title_collect"
        tools:layout="@layout/fragment_collect" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.elvamao.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_recipe_detail"
        android:name="com.example.elvamao.ui.recommend.RecipeDetailFragment"
        tools:layout="@layout/activity_recipe_detail"/>

</navigation>